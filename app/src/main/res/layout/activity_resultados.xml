<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".Resultados">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="30dp"
          android:layout_marginTop="40dp"
          android:text="@string/elecciones"
          android:textAlignment="center"
          android:textColor="#8D8DAA"
          android:textSize="22sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tvSubtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="30dp"
          android:text="RESULTADOS"
          android:textAlignment="center"
          android:textColor="#8D8DAA"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/confeti"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:layout_marginHorizontal="30dp"
          android:layout_marginTop="50dp"
          android:padding="10dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.494"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.139"
          app:lottie_autoPlay="true"
          app:lottie_fileName="confetti.json"
          app:lottie_loop="true"
          app:lottie_speed="1" />
      <LinearLayout
          android:id="@+id/group"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="30dp"
          android:layout_marginTop="10dp"
          android:gravity="center|center_horizontal|center_vertical"
          android:orientation="vertical"
          android:paddingVertical="10dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/confeti">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100"
              android:layout_marginBottom="20dp"
              >

              <TextView
                  android:id="@+id/tvSubtit"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="Partido"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="17sp" />

              <TextView
                  android:id="@+id/Votos"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="Votos"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="17sp" />

              <TextView
                  android:id="@+id/tvPorcentaje"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="%"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="17sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvAlianza"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="Alianza"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvAlianzaV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvAlianzaP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvPAN"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="PAN"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPANV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPANP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvPRD"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="PRD"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPRDV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPRDP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvPRI"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="PRI"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPRIV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPRIP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvPT"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="PT"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPTV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvPTP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="100">

              <TextView
                  android:id="@+id/tvPVerde"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="P Verde"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvVerdeV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="30"
                  android:text="0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tvVerdeP"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"
                  android:text="00.0"
                  android:textAlignment="center"
                  android:textColor="#8D8DAA"
                  android:textSize="14sp" />
          </LinearLayout>

      </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>